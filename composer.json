{
	"name" : "piko/i18n",
	"description" : "A minimal internationalization component which can be used in a piko application or standalone.",
	"keywords" : [
		"internationalization",
		"i18n",
		"translation",
		"language"
	],
	"authors" : [{
			"name" : "Sylvain Philip",
			"homepage" : "https://www.sphilip.com",
			"role" : "Developer"
		}
	],
	"homepage" : "https://github.com/piko-framework/i18n",
	"license" : "LGPL-3.0-or-later",
	"require" : {
		"php" : ">=7.1.0",
		"piko/core" : "^1.0"
	},
	"autoload" : {
		"psr-4" : {
			"piko\\" : "src"
		},
		"files" : [
			"src/functions.php"
		]
	},
	"require-dev" : {
		"phpunit/phpunit" : "^9.5",
		"squizlabs/php_codesniffer" : "^3.5",
		"phpstan/phpstan" : "^0.12.99"
	},
	"scripts" : {
		"test" : [
			"@phpunit",
			"@phpcs",
			"@phpstan"
		],
		"phpunit" : "phpunit",
		"phpcs" : "phpcs --standard=vendor/piko/core/coding-standard  src",
		"phpstan" : "phpstan"
	}
}